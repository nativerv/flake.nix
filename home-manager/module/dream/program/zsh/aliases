# Far better cd
alias cd="pushd"
alias dc="popd"

# mkdir + cd; also change the mcd completion as mcd name is actually used by
# the mtools package which has weird completion for it
compdef '_mkdir' 'mcd' &&
  mcd() { mkdir -p "$@" 2> >(sed s/mkdir/mcd/ 1>&2) && cd "$_"; }

# Simulate plan9 `walk` util
alias walk="find ."


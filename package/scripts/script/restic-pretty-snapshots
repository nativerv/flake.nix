#!/bin/sh

jq -r '.[] | "\(.short_id)\t\(.time)\t\(.tags // [] | join(","))\t\(.paths | join(", "))"' |
  sed -E 's/^(........\t[0-9]+-[0-9]+-[0-9]+T[0-9]+:[0-9]+:[0-9]+)\.[0-9]+\+[0-9]+:[0-9]+/\1/' |
  column -s"$(printf '\t')" -t |
  #awk '{ printf "%9s %-20s %-30s %s\n", $1, $2, $3, $4 }' |
  sed -E "s/(.{$(($(tput cols) - 1))}).*/\1â€¦/"
